<?php

session_start();
$_SESSION["username"] = "Gautam Makwana";
$cookie_name = "user";
$cookie_value = "Gautam Makwana";
setcookie($cookie_name, $cookie_value, time() + (86400 * 30), "/");

?>

<!DOCTYPE html>
    <html>
    <head>
    <title>PHP Session and Cookie</title>
    </head>
    <body>
    <h1>PHP Session and Cookie</h1>
    <p>Index page. Session and cookie have been set.</p>
    <p><a href="welcome.php">Welcome</a></p>
</body>
</html>

<?php

session_start();
if (isset($_SESSION["username"])) {
$username = $_SESSION["username"];
} else {
$username = "Guest";
}
if (isset($_COOKIE["user"])) {
$cookie_username = $_COOKIE["user"];
} else {
$cookie_username = "Guest";
}
?>
<!DOCTYPE html>
<html>
<head>
<title>Welcome Page</title>
</head>
<body>
<h1>Welcome Page</h1>
<p>Welcome, <?php echo $username; ?>!</p>
<p>Your username from cookie is : <?php echo $cookie_username; ?></p>
</body>
</html>
