      justify-content: center;
      align-items: center;
      height: 100vh;
    }
    .calculator {
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 4px 16px rgba(0,0,0,0.13);
      padding: 20px 18px 18px 18px;
      width: 290px;
    }
    .display {
      width: 100%;
      height: 50px;
      border-radius: 6px;
      margin-bottom: 10px;
      font-size: 26px;
      text-align: right;
      padding-right: 10px;
      border: 1px solid #ddd;
      background: #fafafa;
      outline: none;
    }
    .buttons {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      grid-gap: 12px;
    }
    button {
      padding: 17px;
      font-size: 18px;
      border: none;
      border-radius: 7px;
      background: #f1f3f4;
      color: #222;
      cursor: pointer;
      transition: background 0.2s;
    }
    button.operator {
      background: #e0e3e7;
